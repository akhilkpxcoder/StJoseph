
@{
    ViewBag.Title = "View Student";
    Layout = "~/Views/_ViewAdministrator.cshtml";
}

<!DOCTYPE html>
<html>
<head>

  
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
               
                    @for (int i=0;i<Model.Rows.Count;i++)
                    {

                        <tr>
                            <td>@Model.Rows[i][1]</td>
                            <td>@Model.Rows[i][2]</td>
                            <td>@Model.Rows[i][3]</td>
                            <td>@Model.Rows[i][5]</td>
                            <td>
                                <a href="@Url.Action("Edit","StudentAdmin",new{@id=@Model.Rows[i][0] })">Edit</a>
                                <a href="@Url.Action("Delete","StudentAdmin",new{@id=@Model.Rows[i][0] })">Delete</a>
                            </td>
                        </tr>
                    }
                
            </tbody>
        </table>

        <a href="@Url.Action("Create","StudentAdmin")">Add Student</a>
    </div>
    @{
        if (TempData["msge"] != null)
        {
            <script>alert('@TempData["msge"]')</script>
        }
    }
</body>
</html>